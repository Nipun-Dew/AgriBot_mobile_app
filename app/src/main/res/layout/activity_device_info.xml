<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeviceInfoActivity">

    <TextView
        android:id="@+id/textViewDeviceTitle"
        android:layout_width="203dp"
        android:layout_height="41dp"
        android:fontFamily="@font/averia_serif_libre_light"
        android:text="@string/device_info2"
        android:textColor="#151212"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225" />

    <TextView
        android:id="@+id/textViewVer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="@string/version"
        android:textColor="#EB151313"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/chipset"
        android:textColor="#EB151313"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVer" />

    <TextView
        android:id="@+id/textViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/product_id"
        android:textColor="#EB151313"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.141"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewChip" />

    <TextView
        android:id="@+id/textViewPasswrd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/password"
        android:textColor="#EB151313"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewID" />

    <TextView
        android:id="@+id/textViewOwn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/owner"
        android:textColor="#EB151313"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPasswrd" />

    <TextView
        android:id="@+id/textViewIM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/imei"
        android:textColor="#EB151313"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOwn" />

    <TextView
        android:id="@+id/textViewVersionData"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="28dp"
        android:textColor="#1C0505"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewChipData"
        app:layout_constraintStart_toEndOf="@+id/textViewVer"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewChipData"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="28dp"
        android:textColor="#1C0505"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textViewChip"
        app:layout_constraintTop_toBottomOf="@+id/textViewVersionData" />

    <TextView
        android:id="@+id/textViewIDData"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        android:textColor="#1C0505"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textViewID"
        app:layout_constraintTop_toBottomOf="@+id/textViewChipData" />

    <TextView
        android:id="@+id/textViewPasswwordData"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:textColor="#1C0505"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textViewPasswrd"
        app:layout_constraintTop_toBottomOf="@+id/textViewIDData" />

    <TextView
        android:id="@+id/textViewOwnerData"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="28dp"
        android:textColor="#1C0505"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textViewOwn"
        app:layout_constraintTop_toBottomOf="@+id/textViewPasswwordData" />

    <TextView
        android:id="@+id/textViewImiData"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="28dp"
        android:textColor="#1C0505"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textViewIM"
        app:layout_constraintTop_toBottomOf="@+id/textViewOwnerData" />

    <Button
        android:id="@+id/closeInfo"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/custom_default_btn"
        android:text="@string/close"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>